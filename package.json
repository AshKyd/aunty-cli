{
  "name": "@abcnews/aunty",
  "version": "4.0.1",
  "description": "A toolkit for working with ABC News projects",
  "repository": "abcnews/aunty",
  "license": "MIT",
  "contributors": [
    "Colin Gourlay <gourlay.colin@abc.net.au>",
    "Nathan Hoad <hoad.nathan@abc.net.au>"
  ],
  "bin": {
    "aunty": "./src/bin/aunty.js"
  },
  "scripts": {
    "test": "xo"
  },
  "files": [
    "src",
    "templates"
  ],
  "engines": {
    "node": ">=7.6.0"
  },
  "dependencies": {
    "@abcnews/webpacker": "^0.6.0",
    "babel-preset-es2040": "^1.1.1",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "chalk": "^2.0.1",
    "chokidar": "^1.6.1",
    "copy-template-dir": "^1.3.0",
    "del": "^3.0.0",
    "finalhandler": "^1.0.3",
    "gulp-uglify": "^3.0.0",
    "load-json-file": "^2.0.0",
    "map-stream": "0.0.7",
    "merge": "^1.2.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.4.0",
    "pify": "^3.0.0",
    "pkg-dir": "^2.0.0",
    "pump": "^1.0.2",
    "read-pkg": "^2.0.0",
    "resolve": "^1.2.0",
    "rsyncwrapper": "^2.0.1",
    "serve-static": "^1.11.2",
    "ssh2": "^0.5.4",
    "through2": "^2.0.3",
    "update-notifier": "^2.1.0",
    "vinyl-fs": "^2.4.4",
    "vinyl-ftp": "^0.6.0"
  },
  "devDependencies": {
    "xo": "^0.18.2"
  },
  "xo": {
    "overrides": [
      {
        "envs": "browser",
        "files": "templates/**",
        "rules": {
          "import/no-unresolved": 0
        }
      }
    ],
    "rules": {
      "eqeqeq": 0,
      "import/no-dynamic-require": 0,
      "import/no-unassigned-import": 0,
      "no-await-in-loop": 0,
      "no-eq-null": 0
    },
    "ignores": [
      "templates/preact-story/**"
    ],
    "space": true
  }
}
